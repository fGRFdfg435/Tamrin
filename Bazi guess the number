import random

number = random.randint(1, 6)
attempts = 3

while attempts > 0:
    guess = int(input("Guess a number between 1 and 6: "))

    if guess == number:
        print("You win!")
        break
    else:
        attempts -= 1
        if attempts > 0:
            print(f"Wrong guess. Attempts left: {attempts}")
        else:
            print(f"You lose! The correct number was {number}")
